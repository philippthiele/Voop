{
  "name": "voop",
  "displayName": "Voop",
  "description": "Voop is a way to execute Boop scripts directly in VSCode. Boop is a scriptable scratchpad that allows you to run any transformations on your text using the built-in or your self-written .js scripts.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:voop",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voop",
        "title": "Voop"
      },
      {
        "command": "voop.reloadScripts",
        "title": "Voop: Reload Scripts"
      }
    ],
    "keybindings": [
      {
        "command": "voop",
        "key": "Ctrl+Alt+V"
      }
    ],
    "configuration": {
      "title": "Voop",
      "properties": {
        "voop.customScriptsFolderLocation": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path containing boop style custom scripts."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.3"
  }
}
